{
  "name": "brickyard-command-release",
  "version": "0.3.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "eslint *.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prerelease": "npm run lint",
    "release": "standard-version",
    "push": "git push --follow-tags && npm publish . --registry=https://registry.npmjs.org/"
  },
  "author": "e-cloud",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git@github.com:draykcirb/brickyard-command-release.git"
  },
  "dependencies": {
    "babel-eslint": "^6.1.0",
    "brickyard-webpack": "^1.0.0",
    "copy-webpack-plugin": "^3.0.0",
    "del": "^2.2.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "image-webpack-loader": "^2.0.0",
    "lodash": "^4.16.0",
    "log4js": "^0.6.33",
    "webpack": "^1.13.0"
  },
  "devDependencies": {
    "eslint": "^3.5.0",
    "eslint-config-airbnb-base": "^7.0.0",
    "eslint-plugin-import": "^1.15.0",
    "ghooks": "^1.3.1",
    "standard-version": "^2.4.0",
    "validate-commit-msg": "^2.8.0"
  },
  "peerDependencies": {
    "brickyard-command-install": "~0.3.0",
    "brickyard3": "^2.0.0"
  },
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "example",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 72,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!",
      "helpMessage": "\n# allowed type: feat, fix, docs, style, refactor, example, perf, test, chore, revert\n# subject no more than 50 chars\n# a body line no more than 72 chars"
    },
    "ghooks": {
      "//": {
        "post-checkout": "npm install"
      },
      "pre-commit": "npm run lint",
      "commit-msg": "validate-commit-msg",
      "post-rewrite": "npm install",
      "post-merge": "npm install"
    }
  },
  "engines": {
    "node": ">=6.0"
  }
}
