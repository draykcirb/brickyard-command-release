    "webpack": "^1.12.14",
    "webpack-split-by-path": "^0.1.0"
  },
  "devDependencies": {
    "conventional-changelog": "^1.1.0",
    "ghooks": "^1.2.1",
    "validate-commit-msg": "^2.6.1"
  },
  "peerDependencies": {
    "brickyard3": "~1.0.0",
    "brickyard-command-dev": "^0.0.2",
    "brickyard-command-install": "^0.0.2"
  },
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "example",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 72,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!",
      "helpMessage": ""
    },
    "ghooks": {
      "//": {
        "pre-commit": "check code style",
        "post-checkout": "npm install"
      },
      "commit-msg": "validate-commit-msg",
      "post-rewrite": "npm install",
      "post-merge": "npm install"
    }
  }
}
