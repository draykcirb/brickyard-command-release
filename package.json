  "dependencies": {
    "babel-eslint": "^6.0.0-beta.6",
    "copy-webpack-plugin": "^3.0.0",
    "del": "^2.2.0",
    "eslint": "^3.0.0",
    "eslint-config-airbnb-base": "^4.0.0",
    "eslint-loader": "^1.4.0",
    "eslint-plugin-import": "^1.5.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "image-webpack-loader": "^1.6.3",
    "lodash": "^4.6.1",
    "log4js": "^0.6.33",
